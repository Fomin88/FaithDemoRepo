{
	"name": "dataflow2",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "EmpDataDataset1",
						"type": "DatasetReference"
					},
					"name": "Allemployees"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "outputDataset",
						"type": "DatasetReference"
					},
					"name": "ITemployeesSink"
				},
				{
					"dataset": {
						"referenceName": "outputDataset",
						"type": "DatasetReference"
					},
					"name": "HRemployeesSplit"
				},
				{
					"dataset": {
						"referenceName": "outputDataset",
						"type": "DatasetReference"
					},
					"name": "PayrollemployeesSink"
				}
			],
			"transformations": [
				{
					"name": "ITemployees"
				}
			],
			"scriptLines": [
				"parameters{",
				"     parameter1 as string",
				"}",
				"source(output(",
				"          empid as string,",
				"          name as string,",
				"          country as string,",
				"          department as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Allemployees",
				"Allemployees split(equals(department,'1'),",
				"     equals(department,'2'),",
				"     equals(department,'3'),",
				"     disjoint: false) ~> ITemployees@(ITemployees, HRemployees, Payrollemployees)",
				"ITemployees@ITemployees sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['ITemployees.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> ITemployeesSink",
				"ITemployees@HRemployees sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['HRemployees.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> HRemployeesSplit",
				"ITemployees@Payrollemployees sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['Payrollemployess.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> PayrollemployeesSink"
			]
		}
	}
}